{
    "name": "quangtam/vietnam-address-converter",
    "description": "A PHP library to convert and standardize Vietnamese addresses, provinces, districts, and wards with mapping capabilities",
    "type": "library",
    "keywords": ["vietnam", "address", "converter", "mapping", "provinces", "districts", "wards"],
    "license": "MIT",
    "authors": [
        {
            "name": "Quang Tam",
            "email": "quangtamvu@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Vietnam\\AddressConverter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vietnam\\AddressConverter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs src/ tests/ --standard=PSR12",
        "cs-fix": "phpcbf src/ tests/ --standard=PSR12"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
